@page "/menus"
@using FrontendApp.Models
@using FrontendApp.Services
@inject ApiService ApiService

<h3>Nos Menus</h3>

@if (menus == null)
{
    <p>Chargement...</p>
}
else if (!menus.Any())
{
    <p>Aucun menu disponible pour le moment.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in menus)
            {
                <tr>
                    <td>@menu.Date</td>
                    <td>@menu.PlatPrincipal</td>
                    <td>@menu.Dessert</td>
                    <td>@menu.Boisson</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MenuDto>? menus; // âœ… nullable

    protected override async Task OnInitializedAsync()
    {
        menus = await ApiService.GetMenusAsync();
    }
}
